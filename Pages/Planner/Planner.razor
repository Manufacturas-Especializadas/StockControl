@page "/planner"

@using StockControl.Services;
@using StockControl.Models;

@inject PlannerServices services;
@inject NavigationManager nav;

<PageTitle>Planner</PageTitle>




<h1 class="text-black-bold text-center">PLANNER</h1>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card bg-white">
                <div class="card-body">
                    <EditForm Model="planner" class="row g-3 needs-validation" OnValidSubmit="(() => Create())">
                        <div class="col">
                            <label class="form-label">ShopOrder</label>
                            <InputNumber class="form-control" @bind-Value="planner.ShopOrder" required />
                        </div>
                        <div class="col-12">
                            <label class="form-label">N.Parte</label>
                            <InputText class="form-control" @bind-Value="planner.Codigo" required />
                        </div>
                        <div class="col-12">
                            <label class="form-label">N.Parte</label>
                            <InputText class="form-control" @bind-Value="planner.Codigo2" />
                        </div>
                        <div class="col-12">
                            <label class="form-label">N.Parte</label>
                            <InputText class="form-control" @bind-Value="planner.Codigo3" />
                        </div>
                        <div class="col-12">
                            <label class="form-label">N.Parte</label>
                            <InputText class="form-control" @bind-Value="planner.Codigo4" />
                        </div>
                        <div class="col-12">
                            <label class="form-label">N.Parte</label>
                            <InputText class="form-control" @bind-Value="planner.Codigo5" />
                        </div>
                        <div class="col-6">
                            <label class="form-label">Cantidad</label>
                            <InputText class="form-control" @bind-Value=planner.Cantidad required />
                        </div>
                        <div class="col-6">
                            <label class="form-label">Fecha</label>
                            <InputDate class="form-control" @bind-Value="planner.Fecha" required />
                        </div>
                        <Alert @ref="alertRef" Color="Color.Success" Visible="@showAlert" Dismisable="true">
                            Registro nuevo completado
                        </Alert>
                        <button class="btn btn-primary" type="submit">Enviar</button>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>


@code {
    StockControl.Models.Planner planner = new StockControl.Models.Planner();

    bool showAlert = false;
    Alert alertRef;

    private async Task Create()
    {
        var create = await services.CREATE(planner);

        showAlert = true;
        StateHasChanged();

        await Task.Delay(5000);


        nav.NavigateTo("/planner", true);

    }
}
